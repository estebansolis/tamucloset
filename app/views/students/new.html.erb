<div class="test">
<h1>Add Student To Database</h1>
</div>


<table class="table">
	<thead>
		<tr>
			<%= form_for(@student) do |f| %>
			<th align="center">
				<%= f.label :UIN %>
			</th>
			<th>
				<%= f.label :First_Name %>
			</th>
			<th>
				<%= f.label :Last_Name %>
			</th>
			<th>
				<%= f.label :Email %>
			</th>
			<th>
				<%= f.label :Phone_Number %>
			</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>
				<%= f.text_field :UIN,  :value => @uin%>
			</td>
			<td>
				<%= f.text_field :First_Name %>
			</td>
			<td>
				<%= f.text_field :Last_Name %>
			</td>
			<td>
				<%= f.text_field :Email %>
			</td>
			<td>
				<%= f.text_field :Phone_Number %>
			</td>
		</tr>
		<br>
	</tbody>
</table>

<div class="form">
	<%= f.submit class: "btn-btn-primary3" %>
</div>
<% end %>
