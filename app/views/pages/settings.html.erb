<div class="test">
<h3>Delete Users</h3>
</div>
<table class="table table-hover" id="delete_users">
  <thead>
    <th>Email</th>
    <th>Admin</th>
  </thead>
  <tbody>
      <tr>  
      <% @users = User.all %>
      <% @users.each do |user| %>
      </tr>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= link_to "Destroy", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } %></td>
      </tr>
      <% end %>
  </tbody>
</table>
