           <form>
               <fieldset class="form-group">
               <label for="exampleInputEmail1">UIN</label>
               <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter UIN">
               <label for="exampleInputEmail1">Apparel ID</label>
